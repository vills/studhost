<VirtualHost *:80>
  ServerName <%= @server_name %>
  ServerAlias <% @server_aliases.each do |a| %><%= a %> <% end %>
  DocumentRoot <%= @docroot %>

  RewriteEngine On

  <Directory <%= @docroot %>>
    Options FollowSymLinks
    AllowOverride All
    Order allow,deny
    Allow from all
  </Directory>

  LogLevel info
  ErrorLog <%= @logdir %>/<%= @logname %>-error.log
  CustomLog <%= @logdir %>/<%= @logname %>-access.log combined

  #SuexecUserGroup <%= @username %> <%= @username %>

  php_admin_value open_basedir "<%= @open_basedir %>:."
  php_admin_value upload_tmp_dir "<%= @open_basedir %>/tmp"
  php_admin_value session.save_path "<%= @open_basedir %>/tmp"

  AddType application/x-httpd-php .php .php3 .php4 .php5 .phtml
  AddType application/x-httpd-php-source .phps
</VirtualHost>
